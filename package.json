                    "scope": "resource",
                    "enum": [
                        "ignore",
                        "warning",
                        "error"
                    ],
                    "default": "error",
                    "description": "Hex colors must consist of three or six hex numbers"
                },
                "panoscss.lint.argumentsInColorFunction": {
                    "type": "string",
                    "scope": "resource",
                    "enum": [
                        "ignore",
                        "warning",
                        "error"
                    ],
                    "default": "error",
                    "description": "Invalid number of parameters"
                },
                "panoscss.lint.unknownProperties": {
