                    "scope": "resource",
                    "enum": [
                        "ignore",
                        "warning",
                        "error"
                    ],
                    "default": "warning",
                    "description": "Unknown property"
                },
                "panoscss.lint.validProperties": {
                    "type": "array",
                    "uniqueItems": true,
                    "items": {
                        "type": "string"
                    },
                    "scope": "resource",
                    "default": [],
                    "description": "A list of properties that are not validated against the `unknownProperties` rule"
                },
                "panoscss.lint.unknownVendorSpecificProperties": {
