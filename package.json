                }
            }
        }
    },
    "dependencies": {
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "vscode-nls": "^5.0.0",
        "vscode-uri": "^3.0.3"
    },
    "devDependencies": {
        "@types/vscode": "^1.64.0",
        "esbuild": "^0.14.7"
    },
    "categories": [
